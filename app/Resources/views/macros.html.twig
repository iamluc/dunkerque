{% macro repository_status(repository) %}
    {% if repository.private %}
        <span class="label label-danger">
            {{ 'repository.private'|trans }}
            <span class="glyphicon glyphicon-lock"></span>
        </span>
    {% else %}
        <span class="label label-success">
            {{ 'repository.public'|trans }}
            <span class="glyphicon glyphicon-share"></span>
        </span>
    {% endif %}
{% endmacro %}

{% macro repository_star(repository) %}
    {% set data_url_star = path('repository_star', {'name': repository.name, 'action': 'star' }) %}
    {% set data_url_unstar = path('repository_star', {'name': repository.name, 'action': 'unstar' }) %}
    <a href="#" data-url-star="{{ data_url_star }}" data-url-unstar="{{ data_url_unstar }}" id="repository-star">
        <span class="glyphicon glyphicon-star{{ not is_starred_by_user(repository, app.user) ? '-empty' }}"></span>
    </a>
{% endmacro %}

{% macro repository_pull_count(repository) %}
    <span class="label label-primary">
        {{ repository.pulls }} <span class="glyphicon glyphicon-download"></span>
    </span>
{% endmacro %}

{% macro repository_star_count(repository) %}
    <span class="label label-primary">
        {{ repository.stars }} <span class="glyphicon glyphicon-star"></span>
    </span>
{% endmacro %}
